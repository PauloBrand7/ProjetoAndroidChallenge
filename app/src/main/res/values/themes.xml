<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubChallenge" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <!-- TODO: usar os colors.xml, ou tu pode pesquisar sobre styles, pois a cor da toolbar Ã© pela cor no Theme: colorPrimary, basta mudar ela-->
        <!--TODO: esse atributo tu pode setar no layout/view -->
        <!-- OK - cor alterada diretamente no themes.xml -->

        <item name="colorPrimary">#643cb4</item>
        <item name="colorPrimaryVariant">#643cb4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GitHubChallenge.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GitHubChallenge.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GitHubChallenge.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>